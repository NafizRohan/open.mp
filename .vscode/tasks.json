{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-normal",
			"type": "shell",
			"command": "${workspaceRoot}/qawno/pawncc",
			"runOptions": {
				"instanceLimit": 1,
			},
			"args": [
				"${file}",
				"'-i${workspaceFolder}/qawno/include'",
				"'-D${fileDirname}'",
				"'-Z'",
				"'-;+'",
				"'-(+'",
				"'-d2'"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": {
				"owner": "pawn",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"pattern": {
					"regexp": "^(.*?)\\(([0-9]*)[- 0-9]*\\) \\: (fatal error|error|warning) [0-9]*\\: (.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"message": 4
				}
			}
		}
	],
}